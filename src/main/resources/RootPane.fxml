<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tischenko.controllers.ViewController">
    <BorderPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <MenuBar BorderPane.alignment="CENTER">
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" onAction="#newProgram" text="New..."/>
                    <MenuItem mnemonicParsing="false" onAction="#openSourceCode" text="Open source codeâ€¦"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem fx:id="closeProjectMenu" disable="true" mnemonicParsing="false"
                              onAction="#closeCurrentProject" text="Close"/>
                    <MenuItem fx:id="saveMenu" disable="true" mnemonicParsing="false" onAction="#save" text="Save"/>
                    <MenuItem fx:id="saveTablesMenu" disable="true" mnemonicParsing="false" onAction="#saveTables"
                              text="Save tables"/>
                    <MenuItem fx:id="saveAsSourceCodeMenu" disable="true" mnemonicParsing="false"
                              onAction="#saveSourceCode" text="Save as a source code..."/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Analyze">
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem fx:id="runLexicalAnalyzerMenu" mnemonicParsing="false" onAction="#runLexicalAnalyzer"
                              text="Run lexical analyzer"/>
                    <MenuItem mnemonicParsing="false" onAction="#runSyntax3Analyzer"
                              text="Run syntactic analyzer (Relation Based)"/>
                    <MenuItem fx:id="runPoliz" mnemonicParsing="false" onAction="#runPoliz" text="Execute poliz"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <MenuItem mnemonicParsing="false" onAction="#showLanguageDoc" text="Programming language"/>
                </Menu>
            </MenuBar>
        </top>
        <center>
            <SplitPane minHeight="400.0" orientation="VERTICAL" prefHeight="500.0" BorderPane.alignment="CENTER">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <TabPane layoutX="104.0" layoutY="14.0" minHeight="-Infinity" minWidth="-Infinity"
                             prefHeight="300.0" prefWidth="898.0" tabClosingPolicy="UNAVAILABLE"
                             AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                             AnchorPane.topAnchor="0.0">
                        <Tab closable="false" text="Source Code">
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                <TextArea fx:id="sourceCodeArea" disable="true" minHeight="-Infinity" prefHeight="200.0"
                                          prefWidth="898.0" promptText="enter your code here"
                                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                            </AnchorPane>
                        </Tab>
                        <Tab text="Input Tables">
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                <TableView fx:id="inputTokensTable" prefHeight="350.0" prefWidth="223.0"
                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="codeColumn" prefWidth="75.0" text="Code"/>
                                        <TableColumn fx:id="tokenColumn" prefWidth="75.0" text="Token"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </AnchorPane>
                        </Tab>
                        <Tab text="Poliz execution flow">
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                <TableView fx:id="polizStateDumpTableView" layoutX="199.0" layoutY="23.0"
                                           prefHeight="352.0" prefWidth="798.0" AnchorPane.bottomAnchor="0.0"
                                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                           AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="numberPColumn" editable="false" maxWidth="700.0"
                                                     prefWidth="75.0" sortable="false" text="Number"/>
                                        <TableColumn fx:id="stackPColumn" editable="false" prefWidth="75.0"
                                                     sortable="false" text="Stack"/>
                                        <TableColumn fx:id="polizPColumn" editable="false" prefWidth="75.0"
                                                     sortable="false" text="Poliz"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </AnchorPane>
                        </Tab>
                    </TabPane>
                </AnchorPane>
            </SplitPane>
        </center>
        <bottom>
            <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                </padding>
                <Label fx:id="fileNameLabel" maxHeight="1.7976931348623157E308" text="Name of the source code file"
                       HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" prefHeight="19.0" text="Compiler is opened" textAlignment="RIGHT"
                       textFill="#222020" HBox.hgrow="NEVER">
                    <font>
                        <Font name="Candara" size="14.0"/>
                    </font>
                </Label>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
